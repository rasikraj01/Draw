{
  "manifest_version": 2,

  "name": "Draw",
  "description": "A extension  which helps users to draw on webpages.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/img/icon.png"
      },
  "permissions": [
    "activeTab",
    "storage"
],
"content_scripts": [{
   "matches": ["<all_urls>"],
    "css": ["assets/css/style.css"],
    "js": ["assets/js/draw.js"],
  }],
  "background":{
       "scripts":["assets/js/background.js"]
 }

}
